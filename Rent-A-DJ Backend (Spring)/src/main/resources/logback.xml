
<configuration>
    <!-- Printing to file profile -->
    <appender name = "FILE" class = "ch.qos.logback.core.FileAppender">
        <file>logs/app.log</file>
        <encoder>
            <pattern>%date %level %logger{10} [%file:%line] -- %msg%n</pattern>
        </encoder>
    </appender>
    <root level = "info">
        <appender-ref ref = "FILE"/>
    </root>
</configuration>
